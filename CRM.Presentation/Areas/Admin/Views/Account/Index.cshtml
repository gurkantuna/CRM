@model UserLoginViewModel

<div class="card-body px-5 py-5">
    <h3 class="card-title text-left mb-3">Sign in</h3>
    <partial name="_ErrorsAlert" model="Model" />
    <form asp-controller="Account" asp-action="SignIn"
          class="needs-validation"
          method="post">
        <div class="form-group">
            <label asp-for="UserName">Username *</label>
            <input asp-for="UserName" class="form-control p_input">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password *</label>
            <input asp-for="Password" class="form-control p_input">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group d-flex align-items-center justify-content-between">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="@Model.RememberMe" checked="@(Model.RememberMe ? "checked" : null)">
                <label asp-for="RememberMe" class="form-check-label" for="flexCheckChecked">Remember me</label>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-block enter-btn">Signin</button>
        </div>
        <p class="sign-up">Don't have an Account?<a asp-controller="Account" asp-action="Register" asp-area="Admin"> Register</a></p>
    </form>
</div>